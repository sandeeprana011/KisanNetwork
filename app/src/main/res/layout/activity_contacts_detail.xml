<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contacts_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rana.kisannetwork.activities.ContactsDetailActivity">

    <TextView
        android:id="@+id/label_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="First Name :" />

    <TextView
        android:id="@+id/first_name_contactdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/label_country_code"
        android:padding="8dp" />

    <TextView
        android:id="@+id/label_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name_contactdetails"
        android:padding="8dp"
        android:text="Last Name :" />

    <TextView
        android:id="@+id/last_name_contactdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name_contactdetails"
        android:layout_toRightOf="@+id/label_country_code"
        android:padding="8dp" />

    <TextView
        android:id="@+id/label_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name_contactdetails"
        android:padding="8dp"
        android:text="Phone : " />

    <TextView
        android:id="@+id/phone_contactdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name_contactdetails"
        android:layout_toRightOf="@+id/label_country_code"
        android:padding="8dp" />

    <TextView
        android:id="@+id/label_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_contactdetails"
        android:padding="8dp"
        android:text="Country Code :" />

    <TextView
        android:id="@+id/country_code_contactdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_contactdetails"
        android:layout_toRightOf="@+id/label_country_code"
        android:padding="8dp" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/country_code_contactdetails"
        android:layout_centerHorizontal="true"
        android:onClick="sendMessage"
        android:padding="7dp"
        android:text="Send Message"
        android:textColor="#d6d5d5" />


</RelativeLayout>
